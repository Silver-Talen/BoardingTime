extends layout

block content
    table(class="adminTable")
        tr
            th ID
            th Username
            th Age
            th Email
            th User Level
            th
            th
        each item in account
            tr
                td #{item.id}
                td #{item.username}
                td #{item.age}
                td #{item.email}
                td #{item.userLevel}
                td #{"https://api.adorable.io/avatars/face/" + item.avatar_eyes + "/" + item.avatar_nose + "/" + item.avatar_mouth + "/" + item.color}
                td 
                    a(href="/edit/" + item.id) Edit
                td 
                    a(href="/delete/" + item.id) Delete