extends layout

block content
    table(class="gridtable")
        tr
            th ID
            th Username
            th Age
            th Email
            th User Level
            th
        each item in acount
            tr
                td 
                    a(href="/details/" + item.id) #{item.id}
                td #{item.username}
                td #{item.age}
                td #{item.email}
                td #{item.userLevel}
                td 
                    a(href="/edit/" + item.id) Edit
                td 
                    a(href="/delete/" + item.id) Delete
    p 
        a(href="/create") Add new person