extends layout

block content
    head
        title Account-Edit
    div(class='box')
        form(id='form', method='post', action='/edit/'+user_id)
            label Username:
            input(type='text', name='username', value=username)
            br
            label Email:
            input(type='text', name='email', value=email)
            br
            label Password:
            input(type='text', name='password')
            br
            label Age:
            input(type="text", name='age', value=age)
            br
            label Avatar Eyes:
            select(name='avatar_eyes', value='eyes_2')
                option(value=avatar_eyes) Unchanged
                option(value='eyes_1') Eyes 1
                option(value='eyes_2') Eyes 2
                option(value='eyes_3') Eyes 3
                option(value='eyes_4') Eyes 4
                option(value='eyes_5') Eyes 5
                option(value='eyes_6') Eyes 6
                option(value='eyes_7') Eyes 7
                option(value='eyes_9') Eyes 8
                option(value='eyes_10') Eyes 9
            br
            label Avatar Mouth:
            select(name='avatar_mouth', value=avatar_mouth)
                option(value=avatar_mouth) Unchanged
                option(value='mouth_1') Mouth 1
                option(value='mouth_3') Mouth 2
                option(value='mouth_5') Mouth 3
                option(value='mouth_6') Mouth 4
                option(value='mouth_7') Mouth 5
                option(value='mouth_9') Mouth 6
                option(value='mouth_10') Mouth 7
                option(value='mouth_11') Mouth 8
            br
            label Avatar Nose:
            select(name='avatar_nose', value=avatar_nose)
                option(value=avatar_nose) Unchanged
                option(value='nose_1') Nose 1
                option(value='nose_2') Nose 2
                option(value='nose_3') Nose 3
                option(value='nose_4') Nose 4
                option(value='nose_4') Nose 5
                option(value='nose_4') Nose 6
                option(value='nose_4') Nose 7
                option(value='nose_4') Nose 8
            br
            label Color:
            input(type="color", name="color", value="#"+avatar_color)
            br
            input(type='submit', value='Save', class='signUp button')
    script().
        var active = '#{session}';
        var userLevel = '#{userLevel}';
